<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0"
         metadata-complete="false">

    <welcome-file-list>
        <welcome-file>Home</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/Pages/common/register.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/Pages/common/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>About</servlet-name>
        <jsp-file>/Pages/common/about.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>About</servlet-name>
        <url-pattern>/About</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <jsp-file>/Pages/common/Home.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeJsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Error</servlet-name>
        <jsp-file>/Pages/common/404.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/404</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>

    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <jsp-file>/Pages/common/shop.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/ShopJsp</url-pattern>
    </servlet-mapping>
    <!--Admin JSPs and servlets-->
    <servlet>
        <servlet-name>ProductsData</servlet-name>
        <jsp-file>/Pages/AdminPanel/products.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductsData</servlet-name>
        <url-pattern>/proddata</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UsersData</servlet-name>
        <jsp-file>/Pages/AdminPanel/users.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsersData</servlet-name>
        <url-pattern>/usersData</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrdersData</servlet-name>
        <jsp-file>/Pages/AdminPanel/orders.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrdersData</servlet-name>
        <url-pattern>/ordersData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <jsp-file>/Pages/common/Cart.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/CartJSP</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserProfile</servlet-name>
        <jsp-file>/Pages/common/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfile</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Orders</servlet-name>
        <jsp-file>/Pages/common/orderhistory.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Orders</servlet-name>
        <url-pattern>/OrderJSP</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Addresses</servlet-name>
        <jsp-file>/Pages/common/address.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Addresses</servlet-name>
        <url-pattern>/Address</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductItemServlet</servlet-name>
        <jsp-file>/Pages/common/Product.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductItemServlet</servlet-name>
        <url-pattern>/ProductItemJsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Checkouts</servlet-name>
        <jsp-file>/Pages/common/checkout.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Checkouts</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>

</web-app>
